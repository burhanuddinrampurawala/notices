<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".login">

    <EditText
        android:layout_height="wrap_content"
        android:id="@+id/usernameText"
        android:layout_marginTop="24dp"
        android:hint="Username"
        android:textStyle="bold"
        android:textColor="@android:color/background_light"
        android:textSize="35sp"
        android:layout_width="700sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordText"
        android:layout_marginTop="39dp"
        android:textStyle="bold"
        android:hint="Password"
        android:textColor="@android:color/background_light"
        android:textSize="35sp"
        android:layout_width="700sp"
        android:layout_below="@+id/usernameText"
        android:layout_alignLeft="@+id/usernameText"
        android:layout_alignStart="@+id/usernameText" />

    <Button
        android:layout_height="wrap_content"
        android:text="Student"
        android:id="@+id/studentButton"
        android:textStyle="bold"
        android:textSize="75sp"
        android:padding="5sp"
        android:gravity="center_vertical|center_horizontal"
        android:background="@android:color/holo_blue_dark"
        android:layout_marginTop="160dp"
        android:layout_width="350sp"
        android:layout_below="@+id/registerHere"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_height="wrap_content"
        android:text="Admin"
        android:id="@+id/adminButton"
        android:textStyle="bold"
        android:textSize="75sp"
        android:layout_width="300sp"
        android:padding="5sp"
        android:gravity="center_vertical|center_horizontal"
        android:background="@android:color/holo_blue_dark"
        android:layout_marginTop="87dp"
        android:layout_below="@+id/studentButton"
        android:layout_alignLeft="@+id/studentButton"
        android:layout_alignStart="@+id/studentButton"
        android:layout_alignRight="@+id/studentButton"
        android:layout_alignEnd="@+id/studentButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER HERE"
        android:id="@+id/registerHere"
        android:textStyle="bold"
        android:textSize="34sp"
        android:clickable="true"
        android:textColor="#FFFFFF"
        android:layout_marginTop="108dp"
        android:layout_below="@+id/passwordText"
        android:layout_alignRight="@+id/passwordText"
        android:layout_alignEnd="@+id/passwordText" />


</RelativeLayout>
